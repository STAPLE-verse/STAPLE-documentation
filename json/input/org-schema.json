{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "address": {
      "type": "object",
      "properties": {
        "addressCountry": {
          "type": "string",
          "title": "Country or Geopolitical Region for Organization:",
          "description": "Please use ISO two letter country codes."
          "pattern": "[A-Z][A-Z]"
        },
        "addressLocality": {
          "type": "string",
          "title": "City name of the Organization's Location:"
        },
        "addressRegion": {
          "type": "string",
          "title": "State name of the Organization's Location:"
        },
        "postalCode": {
          "type": "string",
          "title": "Zip or postal code for the Organization's Location:"
        }
      },
      "required": [
        "addressCountry",
        "addressLocality",
        "addressRegion",
        "postalCode"
      ]
    },
    "department": {
      "type": "string"
      "title": "Department affiliation for Organization"
    },
    "legalName": {
      "type": "string",
      "title": "Name of the Organization"
    }
  },
  "required": [
    "address",
    "department",
    "legalName"
  ]
}
