  { "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Project Metadata",
    "description": "Information about the overall project.",
    "type": "object",
    "required": [
      "name",
      "description",
      "keywords",
      "citation"
    ],
    "properties": {
      "name": {
        "title": "Title of the project:",
        "type": "string"
      },
      "description": {
        "title": "Description of the project:",
        "type": "string"
      },
      "abstract": {
        "title": "Abstract:",
        "type": "string"
      },
      "keywords": {
        "title": "Keywords separated by commas:",
        "type": "string"
      },
      "citation": {
        "title": "Citation for the project",
        "type": "string"
      },
      "publisher": {
        "title": "Company/group/publisher/journal that published the work:",
        "type": "string"
      },
      "identifier": {
        "title": "DOI/ISSN or other identifier:",
        "type": "string"
      }
    }
  }
